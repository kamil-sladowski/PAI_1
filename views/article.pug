extends layout

block content
  h1= article.title
  h5 Written by #{author}
  p= article.body
  if true
    | <div class="col">
    | <div class ="center-align caption"><img src = #{article.path} alt="image" class="responsive-img" />
    | <p class="center-align caption">#{article.caption}</p>
    | </div>
  else
    .row
      .col.s12
        .caption No photos uploaded yet.
  hr

  a.btn.btn-default(href='/articles/edit/'+article._id) Edit
  a.btn.btn-danger.delete-article(href='#',data-id=article._id) Delete

